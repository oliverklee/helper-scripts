#!/bin/bash

# Installs Composer.

source 'output.sh'

echo 'Installing composer â€¦'
if [ -f "${HOME}/bin/composer" ]; then
  success 'Already installed.';
else
  curl 'https://getcomposer.org/download/2.5.8/composer.phar' -o "${HOME}/bin/composer"
  chmod +x "${HOME}/bin/composer"
  success 'Done.'
fi
