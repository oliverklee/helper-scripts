#!/bin/bash

# Updates all DEB packages and snaps.

source 'output.sh'

echo 'Updating DEB packages …'
sudo apt-get update
sudo apt-get dist-upgrade -y
sudo apt-get clean
success 'Done.'
linefeed

echo 'Updating snaps …'
sudo snap refresh
success 'Done.'
linefeed

echo 'Updating dip …'
GEM_REPORT=`gem search --local '^dip$'`
if echo "$GEM_REPORT" | grep -q 'dip '; then
  gem update dip --user-install;
  success 'Done.'
else
  echo 'Not installed.';
fi
linefeed

