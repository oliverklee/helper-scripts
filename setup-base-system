#!/bin/bash

# Installs the most relevant packages for a base system, and sets the most important settings.

source 'output.sh'

update-everything
linefeed

echo 'Installing the most relevant packages …'
sudo apt-get install -y --no-install-recommends --no-install-suggests \
  ack \
  apt-show-versions \
  aptitude \
  ausweisapp2 \
  bash-completion \
  curl \
  djvulibre-bin \
  etckeeper \
  flatpak \
  fonts-roboto \
  gscan2pdf \
  hyphen-de \
  joe \
  kamoso \
  kate \
  krusader \
  kwayland-integration \
  libkf5khtml-bin \
  libreoffice \
  libreoffice-kf5 \
  libreoffice-l10n-de \
  libreoffice-plasma \
  libreoffice-style-breeze \
  ncdu \
  okular \
  okular-extra-backends \
  pdfarranger \
  pdftk-java \
  ppa-purge \
  snapd \
  speech-dispatcher \
  tesseract-ocr-deu \
  tldr \
  ttf-mscorefonts-installer \
  unpaper \
  wget \
  yakuake
success 'Done.'
linefeed

echo 'Installing supporting packages for Krusader …'
sudo apt-get install -y --no-install-recommends --no-install-suggests \
  arj \
  bzip2 \
  coreutils \
  cpio \
  kdiff3 \
  kget \
  krename \
  lhasa \
  p7zip-full \
  rar \
  unace \
  unrar \
  unzip \
  xz-utils \
  zip
success 'Done.'
linefeed

echo 'Installing Google Chrome …'
PACKAGE_REPORT=$(dpkg -s google-chrome-stable)
if echo "$PACKAGE_REPORT" | grep -q 'install ok installed'; then
  success 'Already installed.';
else
  FILENAME='google-chrome-stable_current_amd64.deb'
  curl -O "https://dl.google.com/linux/direct/${FILENAME}" --output-dir /tmp
  sudo apt install -y "/tmp/${FILENAME}"
  rm "/tmp/${FILENAME}"
  success 'Done.'
fi
linefeed

echo 'Adding the Google Chrome sources …'
CHROME_SOURCES='/etc/apt/sources.list.d/google-chrome.list'
if [ -f "${CHROME_SOURCES}" ]; then
  success 'Already set up.';
else
  echo 'deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main' | sudo tee "${CHROME_SOURCES}" > /dev/null
  success 'Done.'
fi
linefeed

echo 'Installing Thunderbird …'
PACKAGE_REPORT=$(which thunderbird)
if echo "${PACKAGE_REPORT}" | grep -q '/thunderbird'; then
  success 'Already installed.';
else
  sudo snap install thunderbird
  success 'Done.'
fi
