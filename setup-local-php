#!/bin/bash

# Sets up a local PHP installation without a PPA, but does not set up Composer.

source 'output.sh'

echo 'Installing local PHP â€¦'
sudo apt-get install -y --no-install-recommends --no-install-suggests \
"php-cli" \
"php-common" \
"php-curl" \
"php-intl" \
"php-mbstring" \
"php-xdebug" \
"php-xml" \
"php-zip"
success 'Done.'
linefeed
